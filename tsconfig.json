{
	"compilerOptions": {
		"outDir": "./build",
		"target": "es2024",
		"module": "commonjs",
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
	},
	"include": ["src/**/*", "api/index.ts"],
	"exclude": ["node_modules"]
}
